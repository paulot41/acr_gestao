###############################################
# ACR Gestão - Exemplo de configuração PRODUÇÃO
###############################################

# Django
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_VALUE
DEBUG=0
DJANGO_SETTINGS_MODULE=settings.production
ALLOWED_HOSTS=acrsantatecla.duckdns.org,proformsc.duckdns.org,localhost,127.0.0.1

# Base de Dados (PostgreSQL no Compose)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=acrdb
DB_USER=acruser
DB_PASSWORD=CHANGE_ME_DB_PASSWORD
DB_HOST=db
DB_PORT=5432

# Variáveis do container PostgreSQL
POSTGRES_DB=acrdb
POSTGRES_USER=acruser
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

# Redis
REDIS_URL=redis://redis:6379/0

# Superuser Django (opcional para criação automática)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@acr.pt
DJANGO_SUPERUSER_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Multi-tenant domains
ACR_DOMAIN=acrsantatecla.duckdns.org
PROFORM_DOMAIN=proformsc.duckdns.org

# Locale
TIME_ZONE=Europe/Lisbon
USE_TZ=1

