# Exemplo de configuração para produção
# Copie para .env.prod e ajuste os valores

# Django
SECRET_KEY=your_super_secret_key_here_at_least_50_characters_long
DEBUG=0
ALLOWED_HOSTS=acrsantatecla.duckdns.org,proformsc.duckdns.org
DJANGO_LOG_LEVEL=INFO

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=acrdb
DB_USER=acruser
DB_PASSWORD=secure_database_password_here
DB_HOST=db
DB_PORT=5432

# PostgreSQL (usado pelo container db)
POSTGRES_DB=acrdb
POSTGRES_USER=acruser
POSTGRES_PASSWORD=secure_database_password_here

# Superusuário (para comando setup_production --create-superuser)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@exemplo.com
DJANGO_SUPERUSER_PASSWORD=senha_admin_super_segura_aqui
