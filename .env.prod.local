# Configurações de produção local para Docker Desktop
DEBUG=1
SECRET_KEY=acr-gestao-production-secret-key-2025-very-secure-change-in-real-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de dados PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=acrdb
DB_USER=acruser
DB_PASSWORD=acrpass
DB_HOST=db
DB_PORT=5432

# Cache e Performance
CACHE_TIMEOUT=300
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Configurações específicas para teste de performance
GANTT_CACHE_TIMEOUT=60
MAX_EVENTS_PER_REQUEST=1000
ENABLE_QUERY_LOGGING=1

# Configurações para desenvolvimento local (sem HTTPS forçado)
SECURE_SSL_REDIRECT=0
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0
SESSION_COOKIE_SECURE=0
CSRF_COOKIE_SECURE=0
